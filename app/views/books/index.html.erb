<div class="show-tab">
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
</div>


<main>
  <h1 class="main-title">Books</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td> 
        <td class="btn"><%= link_to 'Show', book_path(book.id) %></td>
        <td class="btn"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="btn"><%= link_to 'Delete', book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>  

      </tr>
    <% end %>
  </table>

  <h1 class="create-title">NEW BOOK</h1>
  <!-- form_for部分 -->
  <%= form_for(@book, url: '/books') do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</main>